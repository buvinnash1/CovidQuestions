<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangegradient"
    tools:context=".SettingsScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688">

        <Button
            android:id="@+id/addquestion_button"
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundbuttondarkblue"
            android:text="Add Question"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundbuttondarkblue"
            android:text="Delete Questions"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/setdefault_button"
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundbuttondarkblue"
            android:text="Set to Default Questions"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/viewdata_button"
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundbuttondarkblue"
            android:text="View All Questions"
            android:textAlignment="center"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <Button
        android:id="@+id/saveandexit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Save and Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


</androidx.constraintlayout.widget.ConstraintLayout>